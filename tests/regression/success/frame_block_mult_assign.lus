node counter2(x: int) returns (y: int; z: int);
let
   y = x -> pre y + 1;
   z = x -> pre z + 1;
tel;

node counter(x: int) returns (y: int);
let
  y = x -> pre y + 1;
tel;

node oscillate(x: bool) returns (y: bool);
let
   y = x -> (not pre y);
tel;
